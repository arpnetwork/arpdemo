<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitleBar.Fullscreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/list_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:divider"></item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ItemIconImageView">
        <item name="android:layout_width">@dimen/icon_item_image_size</item>
        <item name="android:layout_height">@dimen/icon_item_image_size</item>
        <item name="android:layout_marginRight">@dimen/item_padding</item>
        <item name="android:layout_marginTop">@dimen/icon_item_image_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/icon_item_image_vertical_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">@drawable/icon_bg</item>
    </style>

    <style name="PosterItemIconImageView">
        <item name="android:layout_width">@dimen/poster_item_image_size</item>
        <item name="android:layout_height">@dimen/poster_item_image_size</item>
        <item name="android:layout_marginBottom">@dimen/item_padding</item>
        <item name="android:layout_marginLeft">@dimen/item_padding</item>
        <item name="android:layout_marginRight">@dimen/item_padding</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">@drawable/icon_bg</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
    </style>

    <style name="SubtitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/subtitleText</item>
        <item name="android:textSize">@dimen/item_subtitle_text_size</item>
    </style>

    <style name="RatingView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
